{{#if resume.awards.length}}
    <section id="awards" {{#if resume.meta.print.hiddenSections}}class="{{#inArray resume.meta.print.hiddenSections
                                                                                  "awards"}}just-screen{{/inArray}}"{{/if}}>
        <div class="mdc-layout-grid title">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
                    <span class="mdc-typography--headline5">Awards</span>
                </div>
            </div>
        </div>
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                {{#each resume.awards}}
                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell">
                        <div class="award-card mdc-card mdc-card--outlined">
                            <div class="mdc-card__header mdc-card__header--padded">
                                <div class="mdc-card__header-texts">
                                    {{#if title}}<span class="mdc-typography--headline6">{{title}}</span>{{/if}}
                                    {{#if awarder}}<span class="mdc-typography--subtitle1">{{awarder}}</span>{{/if}}
                                </div>
                            </div>
                            {{#if date}}
                            <div class="mdc-card__content mdc-card__content--padded">
                                <ul class="mdc-card__list mdc-typography--subtitle1">
                                        <li class="mdc-card__feature">
                                            <i class="mdc-card__feature--icon">calendar_today</i>
                                            <span class="mdc-card__feature--text">
                                                {{this.date}}
                                            </span>
                                        </li>
                                </ul>
                            </div>
                            {{/if}}
                            {{#if summary}}
                                <div class="mdc-card__content mdc-card__content--padded mdc-typography--body1">
                                    <p>{{summary}}</p>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>
{{/if}}
